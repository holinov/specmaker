<p id="notice"><%= notice %></p>

<h1>Work Infos</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Amount</th>
      <th>Units</th>
      <th>Price</th>
      <th>Entry info</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @work_infos.each do |work_info| %>
      <tr>
        <td><%= work_info.name %></td>
        <td><%= work_info.amount %></td>
        <td><%= work_info.units %></td>
        <td><%= work_info.price %></td>
        <td><%= work_info.entry_info %></td>
        <td><%= link_to 'Show', work_info %></td>
        <td><%= link_to 'Edit', edit_work_info_path(work_info) %></td>
        <td><%= link_to 'Destroy', work_info, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Work Info', new_work_info_path %>
