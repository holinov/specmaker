<p id="notice"><%= notice %></p>

<h1>Field Infos</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Sort order</th>
      <th>Unit name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @field_infos.each do |field_info| %>
      <tr>
        <td><%= field_info.name %></td>
        <td><%= field_info.sort_order %></td>
        <td><%= field_info.unit_name %></td>
        <td><%= link_to 'Show', field_info %></td>
        <td><%= link_to 'Edit', edit_field_info_path(field_info) %></td>
        <td><%= link_to 'Destroy', field_info, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

